                                summary: summary
                            })

                        })
                        fetch('http://localhost:3000/send-mail', {
                            method: 'POST',
                            headers: {
                                'Accept': 'application/json',
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({
                                to: emailList
                            })
                        })
                    }

                })
            })
